<Window x:Class="Outline.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Outline.ViewModel"
        mc:Ignorable="d"
        Title="Image Derivative" Height="450" Width="800">
    <Window.DataContext>
        <local:ImageManager/>
    </Window.DataContext>
    <ScrollViewer HorizontalScrollBarVisibility="Auto">
        <StackPanel>
            <Image MaxWidth="600px" MaxHeight="250px" Source="{Binding Path=OpenedImage}"></Image>
            <Button Margin="10" Width="50" Command="{Binding Path=OpenImage}">Button</Button>
            <Image Source="{Binding Path=ResultingImage}"></Image>
        </StackPanel>
    </ScrollViewer>
</Window>